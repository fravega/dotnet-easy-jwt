<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Easy.JWT</AssemblyName>
    <RootNamespace>Easy.JWT</RootNamespace>
    <IncludeSource>True</IncludeSource>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <NoWarn>1701;1702;1705;1591</NoWarn>

    <Authors>Frávega</Authors>
    <Company>Frávega</Company>
    <Product>Easy JWT library supporting symmetric and asymmetric signing algorithms</Product>
    <Version>1.0.0</Version>
    <RepositoryUrl>https://github.com/fravega/dotnet-easy-jwt</RepositoryUrl>
    <PackageTags>net-standard, jwt, auth</PackageTags>
    <Copyright>MIT License</Copyright>
    <PackageReleaseNotes></PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="5.7.0" />
    <PackageReference Include="BouncyCastle.NetCore" Version="1.8.5" />
  </ItemGroup>

</Project>
